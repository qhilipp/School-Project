<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:m="clr-namespace:School_Project.Management"
             BackgroundColor="{x:Static m:ColorManager.BackgroundColor}"
             x:Class="School_Project.Views.Subjects.ColorPickerPage">
    <ContentPage.Content>
        <ScrollView HorizontalOptions="CenterAndExpand">
            <Grid x:Name="layout" Padding="{x:Static m:Settings.Padding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>