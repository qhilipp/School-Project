<?xml version="1.0" encoding="UTF-8"?>
<pf:PracticeDisplay xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:pf="clr-namespace:School_Project.Tabs.PracticeFolder"
                    xmlns:c="clr-namespace:School_Project.Controls"
                    xmlns:i="clr-namespace:School_Project.Information"
                    x:TypeArguments="i:TextPractice"
                    x:Class="School_Project.Tabs.PracticeFolder.TextPracticeDisplay">
    <pf:PracticeDisplay.Answers>
        <Label x:Name="question" HorizontalTextAlignment="Center"/>
        <c:TextBox x:Name="answer" Placeholder="Antwort" HorizontalOptions="Fill"/>
    </pf:PracticeDisplay.Answers>
</pf:PracticeDisplay>