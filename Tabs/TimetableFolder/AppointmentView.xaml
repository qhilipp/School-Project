<?xml version="1.0" encoding="UTF-8"?>
<templates:ElementView xmlns="http://xamarin.com/schemas/2014/forms" 
                       xmlns:templates="clr-namespace:School_Project.Tabs.Templates"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:i="clr-namespace:School_Project.Information"
                       xmlns:s="clr-namespace:School_Project.Management"
                       x:TypeArguments="i:Appointment"
                       x:Class="School_Project.Tabs.TimetableFolder.AppointmentView">
  <ContentView.Content>
        <ScrollView Orientation="Both">
            <StackLayout>
                <Label x:Name="label" FontAttributes="Bold" LineBreakMode="WordWrap" Margin="0"/>
                <Label x:Name="time" FontSize="{x:Static s:Settings.SmallFontSize}"/>
                <Label x:Name="room" FontSize="{x:Static s:Settings.SmallFontSize}"/>
            </StackLayout>
        </ScrollView>
    </ContentView.Content>
</templates:ElementView>