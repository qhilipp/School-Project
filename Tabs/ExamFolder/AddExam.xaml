<?xml version="1.0" encoding="UTF-8"?>
<templates:AddPage xmlns="http://xamarin.com/schemas/2014/forms" 
                   xmlns:templates="clr-namespace:School_Project.Tabs.Templates"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:i="clr-namespace:School_Project.Information"
                   xmlns:c="clr-namespace:School_Project.Controls"
                   x:TypeArguments="i:Exam"
                   x:Class="School_Project.Tabs.ExamFolder.AddExam">
    <templates:AddPage.Options>
        <c:SubjectSelector x:Name="selectSubject"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
            <c:TextBox x:Name="room" Placeholder="Raum"/>
            <c:TextBox x:Name="teacher" Placeholder="Lehrer"/>
        </StackLayout>
        <c:DateSelector x:Name="selectDate"/>
        <c:TimeSelector x:Name="selectTime"/>
        <c:TextBox x:Name="themes" Placeholder="Themen"/>
    </templates:AddPage.Options>
</templates:AddPage>